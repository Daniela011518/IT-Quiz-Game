<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:backgroundTint="#eae0c8"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/finalEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/sample_gmail_com"
            android:textColor="@color/black"
            android:background="@drawable/round_back_white_stroke20"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/label0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/finalEmail"
            android:layout_marginTop="20dp"
            android:text="Topic"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label0"
            android:text="Math"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/finalTopic"
            android:text="Correct Answers"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/finalScoreCorrect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label1"
            android:text="Correct Answer: "
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/finalScoreCorrect"
            android:text="Incorrect Answer"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalIncorrect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label2"
            android:layout_margin="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="Incorrect Answer"
            android:textColor="#000"
            android:textSize="25sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>